        console.log('Audio data:', { volume, frequencyBands, dominantFreq });
      }

      animationFrame = requestAnimationFrame(analyze);
    };

    analyze();

    return () => {
      if (animationFrame) {
        cancelAnimationFrame(animationFrame);
      }
    };
  }, [analyser, audioContext]);

